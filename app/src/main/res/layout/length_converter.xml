<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:singleLine="true"
        android:textSize="35sp"
        android:id="@+id/length_input"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="27dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/length_input_spinner"
        android:layout_below="@+id/length_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="200dp"
        android:spinnerMode="dialog" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:textSize="35sp"
        android:textStyle="bold"
        android:singleLine="true"
        android:id="@+id/length_output"
        android:layout_below="@+id/length_input_spinner"
        android:layout_alignLeft="@+id/length_input"
        android:layout_alignStart="@+id/length_input" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lenght_output_spinner"
        android:layout_below="@+id/length_output"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="200dp"
        android:spinnerMode="dialog" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lenght_output_spinner">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/tableLayout"
            android:background="#EEEEEE">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:text="7"
                    android:id="@+id/seven"
                    android:layout_column="0"
                    android:layout_width="95dp"
                    android:layout_height="90dp"
                    android:textSize="30dp"
                    android:background="#EEEEEE"
                    android:onClick="lengthClciked"
                    android:textColor="#00000F" />

                <Button
                    android:id="@+id/eight"
                    android:layout_column="1"
                    android:textSize="30dp"
                    android:text="8"
                    android:layout_width="95dp"
                    android:layout_height="90dp"
                    android:background="#EEEEEE"
                    android:onClick="lengthClciked"
                    android:textColor="#00000F" />

                <Button
                    android:id="@+id/nine"
                    android:layout_column="2"
                    android:textSize="30dp"
                    android:text="9"
                    android:layout_width="95dp"
                    android:layout_height="90dp"
                    android:background="#EEEEEE"
                    android:onClick="lengthClciked"
                    android:textColor="#00000F" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:textSize="30dp"
                    android:text="4"
                    android:id="@+id/four"
                    android:layout_column="0"
                    android:layout_width="95dp"
                    android:layout_height="90dp"
                    android:background="#EEEEEE"
                    android:onClick="lengthClciked"
                    android:textColor="#00000F" />

                <Button
                    android:textSize="30dp"
                    android:text="5"
                    android:id="@+id/five"
                    android:layout_column="1"
                    android:layout_width="95dp"
                    android:layout_height="90dp"
                    android:background="#EEEEEE"
                    android:onClick="lengthClciked"
                    android:textColor="#00000F" />

                <Button
                    android:textSize="30dp"
                    android:text="6"
                    android:id="@+id/six"
                    android:layout_column="2"
                    android:layout_width="95dp"
                    android:layout_height="90dp"
                    android:background="#EEEEEE"
                    android:onClick="lengthClciked"
                    android:textColor="#00000F" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:textSize="30dp"
                    android:text="1"
                    android:id="@+id/one"
                    android:layout_column="0"
                    android:layout_width="95dp"
                    android:layout_height="90dp"
                    android:background="#EEEEEE"
                    android:onClick="lengthClciked"
                    android:textColor="#00000F" />

                <Button
                    android:textSize="30dp"
                    android:text="2"
                    android:id="@+id/two"
                    android:layout_column="1"
                    android:layout_width="95dp"
                    android:layout_height="90dp"
                    android:background="#EEEEEE"
                    android:onClick="lengthClciked"
                    android:textColor="#00000F" />

                <Button
                    android:textSize="30dp"
                    android:text="3"
                    android:id="@+id/three"
                    android:layout_column="2"
                    android:layout_width="95dp"
                    android:layout_height="90dp"
                    android:background="#EEEEEE"
                    android:onClick="lengthClciked"
                    android:textColor="#00000F" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <Button
                    android:textSize="30dp"
                    android:text="+/-"
                    android:id="@+id/sing"
                    android:layout_column="0"
                    android:layout_width="95dp"
                    android:layout_height="90dp"
                    android:background="#EEEEEE"
                    android:onClick="lengthClciked"
                    android:textColor="#00000F" />

                <Button
                    android:textSize="30dp"
                    android:text="0"
                    android:id="@+id/zero"
                    android:layout_column="1"
                    android:layout_width="95dp"
                    android:layout_height="90dp"
                    android:background="#EEEEEE"
                    android:onClick="lengthClciked"
                    android:textColor="#00000F" />

                <Button
                    android:textSize="30dp"
                    android:text="."
                    android:textStyle="bold"
                    android:id="@+id/decimal"
                    android:layout_column="2"
                    android:layout_width="95dp"
                    android:layout_height="90dp"
                    android:background="#EEEEEE"
                    android:onClick="lengthClciked"
                    android:textColor="#00000F" />
            </TableRow>
        </TableLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="false"
            android:layout_toRightOf="@+id/tableLayout"
            android:background="#69F0AE"
            android:layout_alignTop="@+id/tableLayout">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/erase"
                android:layout_row="0"
                android:layout_column="0"
                android:src="@drawable/erase"
                android:background="#69F0AE"
                android:onClick="lengthClciked" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/invert"
                android:layout_row="1"
                android:layout_column="0"
                android:background="#69F0AE"
                android:src="@drawable/invert"
                android:onClick="lengthClciked" />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/calculator"
                android:layout_row="2"
                android:layout_column="0"
                android:background="#69F0AE"
                android:src="@drawable/calculator"
                android:onClick="lengthClciked" />
        </GridLayout>


    </RelativeLayout>



</RelativeLayout>